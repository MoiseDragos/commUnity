<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.community.PublicProfile.EditPublicProfileActivity"
    android:orientation="vertical"
    android:background="@color/blue5">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        app:layout_heightPercent="12%"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/mod_objectiv_details"/>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="48dp"
        app:layout_heightPercent="12%"
        android:layout_marginLeft="15dp"
        >
        <Button
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_white"
            />

    </android.support.percent.PercentRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:id="@+id/scrollView"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editNickname"
                android:textColor="@color/blue2"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue2"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@null"
                android:textColor="@color/blue5"
                android:id="@+id/edit_nickname"
                android:background="@drawable/edit_text_form_white"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:inputType="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/describe"
                android:textColor="@color/blue2"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue2"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_describe"
                android:textCursorDrawable="@null"
                android:background="@drawable/edit_text_form_white"
                android:textColor="@color/blue5"
                android:minLines="4"
                android:maxLines="4"
                android:layout_marginBottom="10dp"
                android:inputType="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_image"
                android:textAllCaps="true"
                android:textColor="@color/blue2"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue2"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:id="@+id/percentLayout1"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/blue2"
                    android:layout_weight="1.0"
                    />

                <ImageView
                    android:layout_height="48dp"
                    android:layout_width="0dp"
                    android:src="@drawable/arrow_change_icon"
                    android:layout_weight="1.0"
                    android:contentDescription="@null"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/change_profile_image"
                    android:layout_height="116dp"
                    android:layout_width="116dp"
                    android:src="@drawable/change_photo_green_icon"

                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/blue2"
                    android:layout_weight="1.0"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userLayout"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editAddress"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_address"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/edit_text_form_white"
                    android:textColor="@color/blue5"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_marginBottom="10dp"
                    android:inputType="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editAge"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_age"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                    <SeekBar
                        android:id="@+id/seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:max="90"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ngoLayout"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/official_address"
                    android:textAllCaps="true"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_official_address"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/edit_text_form_white"
                    android:textColor="@color/blue5"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_marginBottom="10dp"
                    android:inputType="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/site"
                    android:textAllCaps="true"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_site"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/edit_text_form_white"
                    android:textColor="@color/blue5"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_marginBottom="10dp"
                    android:inputType="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/donate"
                    android:textAllCaps="true"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_donate"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/edit_text_form_white"
                    android:textColor="@color/blue5"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_marginBottom="10dp"
                    android:inputType="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/submit_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/cancel_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/edit_text_form_red"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.percent.PercentRelativeLayout>