<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.community.community.GMaps.SubmitCauseActivity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue5"
        android:weightSum="10">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/objectiv_details"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.3"/>

        <EditText
            android:id="@+id/causes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/edittext_login_form"
            android:fontFamily="sans-serif"
            android:hint="@string/causesName"
            android:textColorHint="@color/blue2"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/describe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/edittext_login_form"
            android:fontFamily="sans-serif"
            android:hint="@string/describe"
            android:textColorHint="@color/blue2"
            android:textCursorDrawable="@null"
            android:minLines="4"
            android:maxLines="4"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/submit_cause"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/white"
                android:background="@drawable/button_login_form"
                android:text="@string/save"/>

            <Button
                android:id="@+id/cancel_cause"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/white"
                android:background="@drawable/button_login_form"
                android:text="@string/cancel"/>


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>

    </LinearLayout>
