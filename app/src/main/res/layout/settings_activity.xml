<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.community.community.GMaps.SubmitCauseActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue5">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/settings"/>

    <ScrollView
        android:layout_below="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:textColor="@color/blue2"
                android:layout_marginBottom="2dp"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue2"
                android:layout_marginBottom="8dp"/>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/hideMyCauses"
                    />

                <Switch
                    android:id="@+id/switchMyCauses"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/hideMySupportedCauses"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/hideMySupportedCauses"
                    />

                <Switch
                    android:id="@+id/switchMySupportedCauses"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/hideAge"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/hideAge"
                    />

                <Switch
                    android:id="@+id/switchAge"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/hideAddress"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/hideAddress"
                    />

                <Switch
                    android:id="@+id/switchAddress"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/hideDescription"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/hideMyDescription"
                    />

                <Switch
                    android:id="@+id/switchDescription"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ngoLayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ngo_users"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/addUser"
                        android:layout_height="28sp"
                        app:layout_widthPercent="65%"
                        app:layout_marginLeftPercent="10%"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/addUser"
                        />

                    <Switch
                        android:id="@+id/switchUser"
                        android:layout_height="28sp"
                        app:layout_widthPercent="20%"
                        app:layout_marginLeftPercent="75%"
                        />

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/addUserLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    >

                    <EditText
                        android:id="@+id/addUserEditText"
                        app:layout_widthPercent="85%"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="10%"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edittext_login_form"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:hint="@string/user_email"
                        android:textColorHint="@color/blue2"
                        android:textCursorDrawable="@null" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_below="@id/addUserEditText">

                        <Button
                            android:id="@+id/submit_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add"
                            android:background="@drawable/edittext_login_form_green"
                            android:scaleType="fitXY"
                            android:textColor="@color/white"
                            tools:ignore="ButtonStyle" />
                        <Button
                            android:id="@+id/cancel_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/edittext_login_form_red"
                            android:textColor="@color/white"
                            tools:ignore="ButtonStyle" />

                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/deleteUser"
                        android:layout_height="28sp"
                        app:layout_widthPercent="65%"
                        app:layout_marginLeftPercent="10%"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/deleteUser"
                        />

                    <Switch
                        android:id="@+id/switchDeleteUser"
                        android:layout_height="28sp"
                        app:layout_widthPercent="20%"
                        app:layout_marginLeftPercent="75%"
                        />

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/deleteUserLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                >

                <EditText
                    android:id="@+id/deleteUserEditText"
                    app:layout_widthPercent="85%"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="10%"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_login_form"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:hint="@string/user_email"
                    android:textColorHint="@color/blue2"
                    android:textCursorDrawable="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@id/deleteUserEditText">

                    <Button
                        android:id="@+id/submit_delete_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete"
                        android:background="@drawable/edittext_login_form_green"
                        android:scaleType="fitXY"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:id="@+id/cancel_delete_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/edittext_login_form_red"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountDetails"
                android:textColor="@color/blue2"
                android:layout_marginBottom="2dp"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue2"
                android:layout_marginBottom="8dp"/>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/changePassword"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/changePassword"
                    />

                <Switch
                    android:id="@+id/switchPassword"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/oldPassword"
                    app:layout_widthPercent="85%"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="10%"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_login_form"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:hint="@string/old_password"
                    android:textColorHint="@color/blue2"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/newPassword"
                    app:layout_widthPercent="85%"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="10%"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_login_form"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:hint="@string/new_password"
                    android:textColorHint="@color/blue2"
                    android:textCursorDrawable="@null"
                    android:layout_below="@id/oldPassword"/>

                <EditText
                    android:id="@+id/confirmNewPassword"
                    app:layout_widthPercent="85%"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="10%"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_login_form"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:hint="@string/confirm_new_password"
                    android:textColorHint="@color/blue2"
                    android:textCursorDrawable="@null"
                    android:layout_below="@id/newPassword"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@id/confirmNewPassword">

                    <Button
                        android:id="@+id/submit_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:background="@drawable/edittext_login_form_green"
                        android:scaleType="fitXY"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:id="@+id/cancel_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/edittext_login_form_red"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/deleteAccount"
                    android:layout_height="28sp"
                    app:layout_widthPercent="65%"
                    app:layout_marginLeftPercent="10%"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/deleteAccount"
                    />

                <Switch
                    android:id="@+id/switchDeleteAccount"
                    android:layout_height="28sp"
                    app:layout_widthPercent="20%"
                    app:layout_marginLeftPercent="75%"
                    />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/deleteAccountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                >

                <EditText
                    android:id="@+id/password"
                    app:layout_widthPercent="85%"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="10%"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_login_form"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:textColorHint="@color/blue2"
                    android:textCursorDrawable="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@id/password">

                    <Button
                        android:id="@+id/submit_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:background="@drawable/edittext_login_form_green"
                        android:scaleType="fitXY"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:id="@+id/cancel_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/edittext_login_form_red"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/userLayout">
                <!--android:visibility="gone">-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ngo"
                    android:textColor="@color/blue2"
                    android:layout_marginBottom="2dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue2"
                    android:layout_marginBottom="8dp"/>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_height="28sp"
                        app:layout_widthPercent="65%"
                        app:layout_marginLeftPercent="10%"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/applyNgo"
                        />

                    <Button
                        android:id="@+id/applyBtn"
                        android:layout_height="28sp"
                        app:layout_widthPercent="22%"
                        app:layout_marginLeftPercent="77%"
                        android:textSize="12sp"
                        android:text="@string/apply"
                        android:textColor="@color/white"
                        android:background="@drawable/edittext_login_form_green"
                        />

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_height="28sp"
                        app:layout_widthPercent="65%"
                        app:layout_marginLeftPercent="10%"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/cancelNgo"
                        />

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_height="28sp"
                        app:layout_widthPercent="22%"
                        app:layout_marginLeftPercent="77%"
                        android:text="@string/cancel"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/edittext_login_form_red"
                        />

                </android.support.percent.PercentRelativeLayout>

            </LinearLayout>
        </LinearLayout>



    </ScrollView>


</android.support.percent.PercentRelativeLayout>